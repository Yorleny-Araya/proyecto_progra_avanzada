@model IEnumerable<FrontEnd.Models.BitacotaAccion>

@{
    ViewData["Title"] = "Index";
}

<h1>Bitácora Acciones</h1>

<p>
    <a asp-action="Create">Crear Nueva</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Accion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpleado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdBitacotaAccion">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdBitacotaAccion">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdBitacotaAccion">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
